@using GoblinGame.UI.Core
@using GoblinGame.UpgradeSystem
@using Sandbox.UI;

@namespace GoblinGame.UI
@inherits Panel
@attribute [StyleSheet( "/UI/SkillTree/SkillTree.scss" )]

<root>
	<div @ref=@flag class="flag">
		<AnimatedImage
			class="flag-image"
			delay="0.7"
			path="textures/tests/flag"
			allow-translate>
		</AnimatedImage>
		<div class="inner">
			<WiggleText Value=@( $"{Goblintide.TotalIQ}" ) Scale=@( 0.6f )></WiggleText>
			<WiggleText Value=@( $"iq" ) Scale=@( 0.4f )></WiggleText>
		</div>
	</div>
</root>

@code {
	[Event( "resources.iq" )]
	void iqRefresh( int value )
	{
		DeleteChildren( true );
		StateHasChanged();
	}
}
