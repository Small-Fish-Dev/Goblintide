@using Sandbox.UI;

@namespace GoblinGame
@inherits Panel

<root>
    <ResourcePanel ResourceName="Energy" ResourceAmount=@((int)Math.Round(Goblintide.TotalEnergy)) />
    <ResourcePanel ResourceName="Goblin" ResourceAmount=@(Goblintide.GoblinArmy.Count) />
    <ResourcePanel ResourceName="Wood" ResourceAmount=@(Goblintide.TotalWood) />
    <ResourcePanel ResourceName="Gold" ResourceAmount=@(Goblintide.TotalGold) />
    <ResourcePanel ResourceName="Food" ResourceAmount=@(Goblintide.TotalFood) />
    <ResourcePanel ResourceName="Women" ResourceAmount=@(Goblintide.TotalWomen) />
</root>

<style>
    Resources {
        position: absolute;
        top: 30px;
        right: 30px;

        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;

		ResourcePanel {
			margin-right: 16px;
		}
        
        transition: all .3s ease-in-out;

        &:intro {
            transform: scale(0.5);
            opacity: 0;
        }
    }
</style>

@code {
    protected override int BuildHash()
    {
        return HashCode.Combine( Goblintide.GoblinArmy.Count, Goblintide.TotalWood, Goblintide.TotalGold, Goblintide.TotalFood, Goblintide.TotalWomen, Goblintide.TotalEnergy );
    }
}
