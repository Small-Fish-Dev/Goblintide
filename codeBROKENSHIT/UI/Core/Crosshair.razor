@using Sandbox;
@using Sandbox.UI;

@namespace GoblinGame
@inherits Panel

<style>
	Crosshair {
		position: absolute;
		width: 8px;
		height: 8px;
		border: 2px white;
		border-radius: 50%;
		transform: translate(-50% -50%);
		left: 50%;
		top: 50%;
		opacity: 0.4;
	}
</style>

<root />

@code {
	public override void Tick()
	{
		if ( Game.LocalPawn is not Lord pawn )
			return;

		Style.Opacity = pawn.Overview
			? 0f
			: 0.4f;
	}
}
