@using Sandbox;
@using Sandbox.UI;

@namespace GameJam
@inherits Panel

<style>
	RaidingHUD {
		position: absolute;
		left: 0px;
		top: 0px;
		width: 100%;
		height: 100%;
	}
</style>

<root>
    <LoadingScreen @ref=Loading></LoadingScreen>

    <RaidTimer></RaidTimer>
</root>

@code {
    public static LoadingScreen Loading { get; set; }

	public static void ShowLoading( bool value )
		=> Loading.SetClass( "hidden", !value );

    protected override int BuildHash()
    {
        return Time.Now.GetHashCode();
    }
}
