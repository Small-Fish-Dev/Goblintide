@using GameJam.UI
@using Sandbox;
@using Sandbox.UI;

@namespace GameJam
@inherits RootPanel

<style>
	HUD {
		position: absolute;
		left: 0px;
		top: 0px;
		width: 100%;
		height: 100%;
		color: white;
		cursor: none;

		.inputContainer {
			position: absolute;
			right: 30px;
			bottom: 30px;
			justify-content: flex-start;
			flex-direction: column;
			align-items: flex-end;
			
			InputGlyph {
				margin-top: 10px;
				flex-grow: 0;
				flex-shrink: 0;
			}
			z-index: 3;
		}

		.resources {
			z-index: 3;
		}

		.cursor {
			position: absolute;
			z-index: 5;
			opacity: 1;
			transition: opacity 0.3s ease-in-out;
			background-image: url(ui/hand.png);
			background-size: cover;
			background-repeat: no-repeat;
			width: 32px;
			aspect-ratio: 1;
			pointer-events: none;

			&.hidden {
				opacity: 0;
			}
		}
	}
</style>

<root>
	<eventlogger/>
	<gameplayhints/>
	<crosshair/>

	<resources class="resources"/>

	<panel class="inputContainer">
		<inputglyph text="Overview" button=@InputButton.Score/>

		@if ( GameMgr.State is VillageState )
		{
			<inputglyph text="Skill Tree" button=@InputButton.Chat/>
			<inputglyph text="Map" button=@InputButton.Reload/>
		}
		@if ( GameMgr.State is RaidingState )
		{
			<inputglyph text="Command!" button=@InputButton.SecondaryAttack/>
		}
	</panel>

	<panel @ref=cursor class="cursor"/>
</root>

@code {
	public static HUD Instance { get; private set; }
	public bool Dragging { get; set; } = false;

	Panel cursor;

	public HUD()
	{
		Instance = this;
		WorldMapContent.Create();
	}

	[Event( "HACK_GameStateChanged" )]
	private void GameStateChanged()
	{
		Log.Info( $"new game state {GameMgr.State}" );
		StateHasChanged();
	}
	

	public override void OnButtonEvent( ButtonEvent e )
	{
		base.OnButtonEvent( e );

	// Mouse Right dragging.
		if ( e.Button != "mouseright" )
			return;

		Dragging = e.Pressed;
	}

	public override void Tick()
	{
		if ( Game.LocalPawn is not Lord pawn )
			return;

		Style.PointerEvents = pawn.Overview
			? PointerEvents.All
			: PointerEvents.None;

		if ( cursor != null )
		{
			var fraction = Mouse.Position / Screen.Size;
			cursor.Style.Left = Length.Fraction( fraction.x );
			cursor.Style.Top = Length.Fraction( fraction.y );
			cursor.SetClass( "hidden", !Mouse.Visible );
		}

	// Capture mouse. ?
		SetMouseCapture( Dragging && pawn.Overview );

	// Overview movement by mouse position.
		if ( !pawn.Overview )
			return;

		var speed = 500f * Time.Delta;
		var scaleFactor = 3f;

		if ( Dragging )
		{
			var delta = -Mouse.Delta;
			pawn.OverviewOffset += speed * (Vector3.Right * delta.x + Vector3.Backward * delta.y);

			return;
		}

	/*var screenFraction = 0.05f;
